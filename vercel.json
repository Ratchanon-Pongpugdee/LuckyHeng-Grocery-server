{
  "version": 2,
  "builds": [
    {
      "src": "src/app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/app.js"
    }
  ],
  "env": {
    "DB_HOST": "@db_host",
    "DB_USER": "@db_user",
    "DB_PASSWORD": "@db_password",
    "DB_DATABASE": "@db_database",
    "DB_PORT": "@db_port",
    "JWT_SECRET": "@jwt_secret",
    "PORT": "5000"
  },
  "ignore": [
    "uploads/*"
  ]
}